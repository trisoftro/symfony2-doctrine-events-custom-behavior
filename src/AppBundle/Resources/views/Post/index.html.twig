{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Post list</h1>

    <ul>
        <li><a href="{{ path('post') }}">All posts</a></li>
        <li><a href="{{ path('post_trash') }}">Trash</a></li>
    </ul>

    <table class="records_list" border="1">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Status</th>
                <th>Created at</th>
                <th>Updated at</th>
                <th>Deleted at</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('post_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.postStatus }}</td>
                <td>{{ entity.createdAt|date('Y-m-d H:i:s') }}</td>
                <td>{{ entity.updatedAt|date('Y-m-d H:i:s') }}</td>
                <td>{% if entity.isDeleted %}{{ entity.deletedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.postStatus }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('post_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('post_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('post_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
